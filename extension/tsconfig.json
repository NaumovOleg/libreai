{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM.AsyncIterable"
        ],
        "baseUrl": ".",
        "outDir": "out",
        "rootDir": "src",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@utils": [
                "./src/utils/index.ts"
            ],
            "@services": [
                "./src/services/index.ts"
            ],
            "@ai": [
                "./src/ai/index.ts"
            ],
            "@observer": [
                "./src/observer/index.ts"
            ],
            "@llm": [
                "./src/ai/llm.ts"
            ],
            "@global/types": [
                "../global.types.ts"
            ],
        }
    },
    "include": [
        "src/**/*",
        "../global.d.ts",
        "../global.types.ts"
    ],
    "exclude": [
        "node_modules",
        "out"
    ]
}