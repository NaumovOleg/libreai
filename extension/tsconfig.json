{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext", // compile TS modules to ESM, works with dynamic import
        "lib": [
            "ES2020"
        ],
        "outDir": "out",
        "rootDir": "src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "../global.d.ts",
        "../global.types.ts",
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        "out"
    ]
}