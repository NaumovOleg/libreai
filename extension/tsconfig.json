{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "rootDir": "src",
        "outDir": "out",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@utils": [
                "src/utils/index.ts"
            ],
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "../global.d.ts",
        "../global.types.ts",
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}