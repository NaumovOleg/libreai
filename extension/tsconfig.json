{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM.AsyncIterable"
        ],
        "outDir": "out",
        "rootDir": "src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@util": [
                "./src/utils/index.ts"
            ]
        }
    },
    "include": [
        "../global.d.ts",
        "../global.types.ts"
    ],
    "exclude": [
        "node_modules",
        "out"
    ]
}