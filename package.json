{
  "name": "robocode",
  "private": true,
  "displayName": "AI Inline + Chat",
  "publisher": "olegnaumov",
  "description": "Code copilot",
  "version": "1.1.0",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/robot.svg",
  "activationEvents": [
    "onStartupFinished"
  ],
  "workspaces": [
    "chat",
    "extension"
  ],
  "scripts": {
    "dev": "nodemon --config ./nodemon.json",
    "build": "yarn workspace chat build && yarn workspace extension build",
    "build:chat": "yarn workspace chat build",
    "build:extension": "yarn workspace extension build"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "robocode",
          "title": "Robocode",
          "icon": "media/robot.svg"
        }
      ]
    },
    "views": {
      "robocode": [
        {
          "id": "robocodeView",
          "name": "Chat",
          "icon": "media/robot.svg",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "robocode.openChat",
        "title": "Open AI Chat",
        "icon": "media/robot.svg"
      },
      {
        "command": "robocode.addContextFiles",
        "title": "Add context"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "robocode.openChat",
          "when": "view == robocode.view",
          "group": "navigation",
          "icon": "media/robot.svg"
        },
        {
          "command": "robocode.openChat",
          "when": "view == robocode.view",
          "group": "navigation",
          "icon": "media/robot.svg"
        }
      ]
    },
    "configuration": {
      "title": "AI Extension Settings",
      "properties": {
        "chatConfig.provider": {
          "type": "string"
        },
        "chatConfig.model": {
          "type": "string"
        },
        "chatConfig.endpoint": {
          "type": "string",
          "default": "http://localhost:11434"
        },
        "chatConfig.apiKey": {
          "type": "string"
        },
        "chatConfig.maxTokens": {
          "type": "number"
        },
        "chatConfig.temperature": {
          "type": "number"
        },
        "autoCompleteConfig.provider": {
          "type": "string"
        },
        "autoCompleteConfig.model": {
          "type": "string"
        },
        "autoCompleteConfig.endpoint": {
          "type": "string",
          "default": "http://localhost:11434"
        },
        "autoCompleteConfig.apiKey": {
          "type": "string"
        },
        "autoCompleteConfig.maxTokens": {
          "type": "number"
        },
        "autoCompleteConfig.temperature": {
          "type": "number"
        },
        "agentConfig.provider": {
          "type": "string"
        },
        "agentConfig.model": {
          "type": "string"
        },
        "agentConfig.endpoint": {
          "type": "string",
          "default": "http://localhost:11434"
        },
        "agentConfig.apiKey": {
          "type": "string"
        },
        "agentConfig.maxTokens": {
          "type": "number"
        },
        "agentConfig.temperature": {
          "type": "number"
        }
      }
    }
  },
  "dependencies": {
    "nodemon": "^3.1.10"
  }
}
