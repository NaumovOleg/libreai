{
  "name": "libreai",
  "private": true,
  "displayName": "AI Inline + Chat",
  "publisher": "olegnaumov",
  "description": "Inline автодополнение кода и чат с ИИ. Стриминг, workspace context, hotkeys.",
  "version": "1.1.0",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/icon.svg",
  "activationEvents": [
    "onStartupFinished"
  ],
  "workspaces": [
    "chat",
    "extension"
  ],
  "scripts": {
    "dev": "nodemon --config ./nodemon.json",
    "build": "yarn workspace chat build && yarn workspace extension build",
    "build:chat": "yarn workspace chat build",
    "build:extension": "yarn workspace extension build"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "libreAi",
          "title": "AI",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "libreAi": [
        {
          "id": "libreChatView",
          "name": "Chat",
          "icon": "media/icon.svg",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "libreChat.openChat",
        "title": "Open AI Chat",
        "icon": "media/icon.svg"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "libreChat.openChat",
          "when": "view == libreAi.view",
          "group": "navigation",
          "icon": "media/icon.svg"
        },
        {
          "command": "libreChat.openChat",
          "when": "view == libreAi.view",
          "group": "navigation",
          "icon": "media/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "AI Extension Settings",
      "properties": {
        "chatConfig.provider": {
          "type": "string"
        },
        "chatConfig.model": {
          "type": "string"
        },
        "chatConfig.endpoint": {
          "type": "string",
          "default": "http://localhost:11434"
        },
        "chatConfig.apiKey": {
          "type": "string"
        },
        "chatConfig.maxTokens": {
          "type": "number"
        },
        "chatConfig.temperature": {
          "type": "number"
        },
        "autoCompleteConfig.provider": {
          "type": "string"
        },
        "autoCompleteConfig.model": {
          "type": "string"
        },
        "autoCompleteConfig.endpoint": {
          "type": "string",
          "default": "http://localhost:11434"
        },
        "autoCompleteConfig.apiKey": {
          "type": "string"
        },
        "autoCompleteConfig.maxTokens": {
          "type": "number"
        },
        "autoCompleteConfig.temperature": {
          "type": "number"
        }
      }
    }
  },
  "dependencies": {
    "nodemon": "^3.1.10"
  }
}
